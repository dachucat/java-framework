<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper  namespace="course.linkflower.link.oneframework.dao.UsedCarPhotoMapper">
    <insert id="add">
        insert into used_car_photo(used_car_id, photo, ordering)
    </insert>

    <select id="lastOrderingByUsedCarId" resultType="byte">
        select ordering from used_car_photo where used_car_id=#{id} order by ordering desc limit 1
    </select>

    <delete id="deleteById">
        delete from used_car_photo where id=#{id}
    </delete>

    <update id="updateById">
        update used_car_photo set
        <if test="usedcar_id!=null">
            used_car_id=#{usedCarId}
        </if>
        <if test="photo!=null">
            photo=#{photo}
        </if>
        ordering=#{ordering} where id=#{id}
    </update>

    <select id="listPhotoById" resultType="course.linkflower.link.oneframework.vo.usedcarphoto.UsedCarPhotoVo">
        select * from used_car_photo where used_car_id=#{usedCarId} order by ordering asc limit 256
    </select>
</mapper>