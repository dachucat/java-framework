<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="course.linkflower.link.oneframework.dao.CarCompanyMapper">
    <insert id="add" parameterType="course.linkflower.link.oneframework.model.CarCompany" keyProperty="id" useGeneratedKeys="true">
        insert into car_company(name, address, email, phone, icon)
        values(#{name},#{address},#{email},#{phone},#{icon})
    </insert>

    <update id="update">
        update car_company set
        <if test="name">name=#{name},</if>
        <if test="address">address=#{address},</if>
        <if test="email">email=#{email},</if>
        <if test="phone">phone=#{phone},</if>
        <if test="phone">phone=#{phone},</if>
        <if test="icon">icon=#{icon}</if>
        where id=#{id}
    </update>
    
    <select id="getCarCompanyById" resultType="course.linkflower.link.oneframework.vo.carcompany.CarCompanyVo">
        select * from car_company where id=#{id}
    </select>

    <delete id="deleteById">
        delete from car_company where id=#{id}
    </delete>

    <select id="countNameDiffId" resultType="int">
        select  count(*)  from car_company where name=#{name} and id!=#{id}
    </select>

    <select id="countName" resultType="int">
        select  count(*)  from car_company where name=#{name}
    </select>

    <select id="getCarCompanyById" resultType="course.linkflower.link.oneframework.vo.carcompany.CarCompanyVo">
        select * from car_company where id=#{id} limit 1
    </select>
</mapper>