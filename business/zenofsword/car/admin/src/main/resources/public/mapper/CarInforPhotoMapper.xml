<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper  namespace="course.linkflower.link.oneframework.dao.CarInforPhotoMapper">
    <insert id="add" keyProperty="id" useGeneratedKeys="true" parameterType="course.linkflower.link.oneframework.model.CarInforPhoto">
        insert into car_infor_photo(car_infor_id, photo, ordering) values(#{carInforId},#{photo},#{ordering})
    </insert>

    <select id="lastOrderingByCarInforId" resultType="Byte">
        select ordering from car_infor_photo where car_infor_id=#{carInforId} order by ordering desc limit 1
    </select>

    <delete id="deleteById">
        delete from car_infor_photo where id=#{id}
    </delete>

    <update id="updateById">
        update car_infor_photo set
        <if test="carInforId!=null">
            car_infor_id=#{carInforId}
        </if>
        <if test="photo!=null">
            ,photo=#{photo}
        </if>
        <if test="ordering">
            ,ordering=#{ordering}
        </if>
        where id=#{id}
    </update>

    <select id="listPhotoByCarInforId" resultType="course.linkflower.link.oneframework.vo.carinforphoto.CarInforPhotoVo">
        select * from car_infor_photo where car_infor_id=#{carInforId} order by ordering asc limit 256
    </select>

    <select id="getCarInforPhotoById" resultType="course.linkflower.link.oneframework.vo.carinforphoto.CarInforPhotoVo">
        select * from car_infor_photo where id=#{id} limit 1
    </select>
</mapper>