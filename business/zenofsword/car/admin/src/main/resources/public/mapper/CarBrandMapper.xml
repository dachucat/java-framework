<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper  namespace="course.linkflower.link.oneframework.dao.CarBrandMapper">
    <insert id="add" parameterType="course.linkflower.link.oneframework.model.CarBrand"
            useGeneratedKeys="true" keyProperty="id">
        insert into car_brand (icon,name,car_company_id)
        value(#{icon},#{name},#{carCompanyId})
    </insert>

    <delete id="deleteById">
        delete from car_brand where id=#{id}
    </delete>

    <update id="update">
        update car_brand set icon=#{icon}, name=#{name}, car_company_id=#{carCompanyId} where id=#{id}
    </update>

    <select id="getCarBrandById" resultType="course.linkflower.link.oneframework.vo.carbrand.CarBrandVo">
        select * from car_brand where id=#{id}
    </select>

    <select id="listNameByCarCompanyId" resultType="course.linkflower.link.oneframework.vo.carbrand.CarBrandVo">
        select name from car_brand where car_company_id=#{id} limit #{DefaultMaxCountLimit}
    </select>

    <select id="getNameById" resultType="String">
        select name from car_brand where id=#{id}
    </select>

    <select id="countCompanyIdBrandName" resultType="int">
        select count(*) from car_brand where car_company_id=#{carCompanyId} and name=#{name} limit 1
    </select>

    <select id="countCompanyIdBrandNamediffId" resultType="int">
        select count(*) from car_brand where car_company_id=#{carCompanyId} and name=#{name} and id!=#{id} limit 1
    </select>
</mapper>