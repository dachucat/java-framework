<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper  namespace="course.linkflower.link.oneframework.dao.CarInforMapper">
    <insert id="add" parameterType="course.linkflower.link.oneframework.model.CarInfor" useGeneratedKeys="true" keyProperty="id">
        insert into car_infor (quoted_price, guide_price, car_pattern_id)
        values(#{quotedPrice},#{guidePrice},#{carPatternId})
    </insert>

    <update id="updateById">
        update car_infor
        <set>
            <if test="quotedPrice">quoted_price=#{quotedPrice}</if>
            <if test="guidePrice">guide_price=#{guidePrice}</if>
            <if test="carPatternId">=car_pattern_id#{carPatternId}</if>
        </set>
        where id=#{id}
    </update>

    <delete id="deleteById">
        delete from car_infor where id=#{id}
    </delete>

    <select id="getCarInforById" resultType="course.linkflower.link.oneframework.vo.carinfor.CarInforVo">
        select * from car_infor where id=#{id}
    </select>

    <select id="countCarPatternId" resultType="int">
        select count(*) from car_infor where car_pattern_id=#{carPatternId}
    </select>

    <select id="countCarPatternIdDiffId" resultType="int">
        select count(*) from car_infor where car_pattern_id=#{carPatternId} and id!=#{id}
    </select>

    <select id="search" resultType="course.linkflower.link.oneframework.vo.carinfor.CarInforShowVo">
        select * from car_infor order by id limit #{startCount}, #{pageSize}
    </select>

    <select id="countAll" resultType="long">
        select count(*) from car_infor
    </select>
</mapper>